<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/noti_img_albumart"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/empty_albumart" />

    <TextView
        android:id="@+id/noti_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="Sample Title"
        android:textColor="@android:color/black" />

    <ImageButton
        android:id="@+id/noti_rewind"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@null"
        android:src="@drawable/ic_fast_rewind_black" />

    <ImageButton
        android:id="@+id/noti_play_pause"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@null"
        android:src="@drawable/ic_play_black" />

    <ImageButton
        android:id="@+id/noti_forward"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@null"
        android:src="@drawable/ic_fast_forward_black" />

    <ImageButton
        android:id="@+id/noti_close"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@null"
        android:src="@drawable/ic_close" />

</LinearLayout>