<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/noti_img_albumart"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="5dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/img_music" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/noti_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="Sample Title"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/noti_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="2dp"
            android:textSize="8dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="Sample Artist"
            android:textColor="@android:color/black" />


    </LinearLayout>

    <ImageButton
        android:id="@+id/noti_rewind"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@null"
        android:src="@drawable/ic_fast_rewind"
        tools:ignore="VectorDrawableCompat" />

    <ImageButton
        android:id="@+id/noti_play_pause"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@null"
        android:src="@drawable/ic_play"
        tools:ignore="VectorDrawableCompat" />

    <ImageButton
        android:id="@+id/noti_forward"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@null"
        android:src="@drawable/ic_fast_forward"
        tools:ignore="VectorDrawableCompat" />

    <ImageButton
        android:id="@+id/noti_close"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@null"
        android:src="@drawable/ic_close"
        tools:ignore="VectorDrawableCompat" />

</LinearLayout>