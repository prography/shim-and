<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="-90"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="-90">
    <shape
        android:innerRadius="104dp"
        android:shape="ring"
        android:thickness="16dp">
        <gradient
            android:centerColor="#ff4081"
            android:centerY="0.5"
            android:endColor="#aeea00"
            android:startColor="@color/colorSecondary"
            android:type="sweep" />
    </shape>
</rotate>