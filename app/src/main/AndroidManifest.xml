<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="co.shimm.app">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name="co.shimm.app.media.AudioApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApp"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="co.shimm.app.activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.MyApp.NoActionBar"/>
        <activity
            android:name="co.shimm.app.activity.SplashActivity"
            android:theme="@style/Theme.MyApp.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="co.shimm.app.activity.MainActivity"
            android:theme="@style/Theme.MyApp.NoActionBar" />
        <activity
            android:name="co.shimm.app.activity.AppDetailActivity"
            android:theme="@style/Theme.MyApp.NoActionBar" />
        <activity
            android:name="co.shimm.app.activity.FeedbackActivity"
            android:theme="@style/Theme.MyApp.NoActionBar" />
        <activity
            android:name="co.shimm.app.activity.PlaylistActivity"
            android:theme="@style/Theme.MyApp.NoActionBar" />

        <service
            android:name="co.shimm.app.media.AudioService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="REWIND" />
                <action android:name="TOGGLE_PLAY" />
                <action android:name="FORWARD" />
                <action android:name="CLOSE" />
            </intent-filter>
        </service>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>